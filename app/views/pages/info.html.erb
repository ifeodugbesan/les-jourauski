<div class="info-container">
  <h1 class="boldest text-center mb-4 <%= @dark_mode ? 'white' : 'black' %>">info</h1>

  <!-- LOCATION -->

  <h3 class="bold my-3 <%= @dark_mode ? 'white' : 'black' %>">Location 🏠</h3>

  <%= link_to "https://www.google.com/maps/place/Chalet+Bayona/@45.5500692,6.7609522,16.44z/data=!4m8!3m7!1s0x4789701d2ff60d49:0x8e874cdeef1594f6!5m2!4m1!1i2!8m2!3d45.5502887!4d6.7629647", target: "_blank", class: "info-link #{ @dark_mode ? 'light-grey' : 'black' }" do %>
    <span>Chalet Bayona | 73210 Peisey-Nancroix, France</span>
    <%= image_tag "#{ @dark_mode ? 'go-white.png' : 'go.png' }", height: 24 %>
  <% end %>

  <!-- PISTE MAP -->

  <h3 class="bold my-3 <%= @dark_mode ? 'white' : 'black' %>">Piste Map 🏔</h3>

  <%= link_to "https://www.piste-maps.co.uk/Piste-Maps/France/Peisey-Vallandry-Piste-Map-2022.pdf", target: "_blank", class: "info-link #{ @dark_mode ? 'light-grey' : 'black' }" do %>
    <span>Les Arcs | Peisey-Vallandry</span>
    <%= image_tag "#{ @dark_mode ? 'go-white.png' : 'go.png' }", height: 24 %>
  <% end %>

  <%= link_to "https://www.piste-maps.co.uk/Piste-Maps/France/La-Plagne-Piste-Map-2022.pdf", target: "_blank", class: "info-link #{ @dark_mode ? 'light-grey' : 'black' }" do %>
    <span>La Plagne</span>
    <%= image_tag "#{ @dark_mode ? 'go-white.png' : 'go.png' }", height: 24 %>
  <% end %>

  <!-- RENTAL -->

  <h3 class="bold my-3 <%= @dark_mode ? 'white' : 'black' %>">Ski/Snowboard rental ⛷ 🏂</h3>

  <%= link_to "https://www.lesarcs-peiseyvallandry.com/en/forfaits_offre", target: "_blank", class: "info-link #{ @dark_mode ? 'light-grey' : 'black' }" do %>
    <span>Ski Passes</span>
    <%= image_tag "#{ @dark_mode ? 'go-white.png' : 'go.png' }", height: 24 %>
  <% end %>

  <%= link_to "https://www.berard-skishop.fr/", target: "_blank", class: "info-link #{ @dark_mode ? 'light-grey' : 'black' }" do %>
    <span>Berard Ski Shop</span>
    <%= image_tag "#{ @dark_mode ? 'go-white.png' : 'go.png' }", height: 24 %>
  <% end %>

  <%= link_to "https://www.sport2000rent.com/en/skirental/shop", target: "_blank", class: "info-link #{ @dark_mode ? 'light-grey' : 'black' }" do %>
    <span>Sport 2000 rent | Noz Sports/Paradis Sport</span>
    <%= image_tag "#{ @dark_mode ? 'go-white.png' : 'go.png' }", height: 24 %>
  <% end %>

</div>


