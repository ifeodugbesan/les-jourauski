<div class="article-container" data-controller="article">
  <div class="article-top">
    <div class="article-user">
      <%= cl_image_tag @tip.user.avatar_key %>
      <div class="article-user-info">
        <h6 class="bold m-0"><%= @tip.user.full_name %></h6>
        <p class="s-medium-text bold grey m-0"><%= @tip.created_at.strftime('%b %d, %Y') %></p>
      </div>
      <% if policy(@tip).edit? %>
        <div class="crud-links">
          <%= link_to edit_tip_path(@tip) do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to tip_path(@tip), method: :delete, data: { confirm: 'Are you sure you want to delete this tip?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <h3 class="bold mb-2"><%= @tip.title %></h3>
  </div>
  <div class="article-show-content">
    <%= @tip.content %>
  </div>
</div>
