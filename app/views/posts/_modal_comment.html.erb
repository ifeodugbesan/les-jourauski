<div class="post-card-user-info boldest py-1">
  <% if comment.user.avatar.attached?  %>
    <%= cl_image_tag comment.user.avatar.key, width: 40, class: 'avatar-sm' %>
  <% else %>
    <%= image_tag 'default-user.png', width: 40, class: 'avatar-sm' %>
  <% end %>
  <%= link_to user_path(comment.user), class: 'no-decoration' do %>
    <span class="m-0 link-hover <%= @dark_mode ? 'white' : 'black' %>"><%= comment.user.username ? comment.user.username : comment.user.full_name %></span> <span class="s-medium-text <%= @dark_mode ? 'white' : 'black' %>" style="font-weight: 200;"><%= comment.content %></span>
  <% end %>
</div>

<div class="alert bg-success alert-dismissible fade show m-0 p-0" role="alert" data-target="posts.flash">
  <p class="text-center m-0 boldest small-text white">Comment Created!</p>
</div>
