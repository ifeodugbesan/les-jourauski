<div class="container">
  <h1 class="boldest text-center mt-5 mb-4 <%= @dark_mode ? 'grey' : 'black' %>">Edit Post</h1>
  <%= simple_form_for @post do |f| %>
    <%= f.input :caption, label: false, placeholder: 'Caption', input_html: { class: "devise-input #{ @dark_mode ? 'dark-mode white' : 'normal-mode' }" } %>
    <%= f.submit 'Update Post', class: 'primary-button', data: { action: 'click->common#showLoader' } %>
  <% end %>
</div>
