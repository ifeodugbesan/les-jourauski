<div class="container">
  <h1 class="boldest text-center">Edit Resource</h1>
  <%= simple_form_for @resource do |f| %>
    <%= f.input :category, collection: ["Colors", "Fonts", "Icons", "Illustrations", "Inspiration", "Javascript", "Ruby - Rails", "Royalty Free Images"], label: false, prompt: 'Category' %>
    <%= f.input :title, label: false, placeholder: 'Title', input_html: { class: 'devise-input' } %>
    <%= f.input :description, label: false, placeholder: 'Description', input_html: { class: 'devise-input' } %>
    <%= f.input :link, label: false, placeholder: 'link', input_html: { class: 'devise-input' } %>
    <%= f.input :photo, as: :file %>
    <%= f.submit 'Update Resource', class: 'primary-button' %>
  <% end %>
</div>
