<% resources.each do |resource| %>
  <div class="col-sm-6 col-lg-4">
    <div class="resource-card">
      <%= link_to resource.link, target: '_blank' do %>
        <%= cl_image_tag resource.photo.key, class: 'resource-image' %>
      <% end %>
      <p class="boldest mt-2 mb-0 <%= @dark_mode ? 'grey' : 'black' %>"><%= resource.title %></p>
      <p class="lighter <%= @dark_mode ? 'white' : 'black' %>"><%= resource.description %></p>
      <% if policy(resource).edit? %>
        <div class="crud-links">
          <%= link_to edit_resource_path(resource) do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to resource_path(resource), method: :delete, data: { confirm: 'Are you sure you want to delete this resource?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
