<% if policy(Resource).create? %>
  <%= link_to new_resource_path, class: 'add-new-button' do %>
    <%= image_tag 'add-new.png' %>
  <% end %>
<% end %>
<h1 class="boldest text-center" data-target="common.resourcesHeader">Resources</h1>
<h6 class="boldest text-center mb-4" data-target="common.resourcesHeader">Here is a list of many different useful resources.</h6>
<div class="resource-tabs" data-target="common.tabsHolder">
  <div class="front-end-tab resource-tab" data-action="click->common#switchTabs" data-type="front-end">
    <h6 class="boldest text-center m-0">Front End/Design</h6>
  </div>
  <div class="back-end-tab resource-tab" data-action="click->common#switchTabs" data-type="back-end">
    <h6 class="boldest text-center m-0">Rails/Javascript</h6>
  </div>
</div>
<div class="resources-content" data-target="common.resourcesContent">
  <div class="front-end-container resource-active" data-target="common.resourceTabs" data-type="front-end">
    <div class="resources-container">
      <h2 class="resource-category boldest mb-3">Colors</h2>
      <div class="row">
        <%= render 'resource_cards', resources: @resources.where(category: 'Colors') %>
      </div>
    </div>
    <div class="resources-container">
      <h2 class="resource-category boldest mb-3">Fonts</h2>
      <div class="row">
        <%= render 'resource_cards', resources: @resources.where(category: 'Fonts') %>
      </div>
    </div>
    <div class="resources-container">
      <h2 class="resource-category boldest mb-3">Icons</h2>
      <div class="row">
        <%= render 'resource_cards', resources: @resources.where(category: 'Icons') %>
      </div>
    </div>
  </div>
  <div class="back-end-container" data-target="common.resourceTabs" data-type="back-end">
    <div class="resources-container">
      <h2 class="resource-category boldest mb-3">Royalty Free Images</h2>
      <div class="row">
        <%= render 'resource_cards', resources: @resources.where(category: 'Royalty Free Images') %>
      </div>
    </div>
    <div class="resources-container">
      <h2 class="resource-category boldest mb-3">Illustrations</h2>
      <div class="row">
        <%= render 'resource_cards', resources: @resources.where(category: 'Illustrations') %>
      </div>
    </div>
    <div class="resources-container">
      <h2 class="resource-category boldest mb-3">Inspiration</h2>
      <div class="row">
        <%= render 'resource_cards', resources: @resources.where(category: 'Inspiration') %>
      </div>
    </div>
  </div>
</div>
