<div class="devise-wrapper">
  <div class="devise-container">
    <div class="devise-form">
      <h1 class="boldest text-center devise-form-title <%= @dark_mode ? 'white' : 'black' %>">Edit profile</h1>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: 'Email',
                      input_html: { autocomplete: "email", class: "devise-input" } %>
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: 'First name',
                      input_html: { autocomplete: "first name", class: "devise-input" } %>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: 'Last name',
                      input_html: { autocomplete: "last name", class: "devise-input" } %>
          <%= f.input :username,
                      required: false,
                      autofocus: true,
                      label: false,
                      placeholder: 'Username (optional)',
                      input_html: { autocomplete: "username", class: "devise-input" } %>
          <div class="<%= @dark_mode ? 'white' : 'black' %>">
            <%= f.input :avatar, as: :file,
                        required: false,
                        label: false %>
          </div>
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      label: false,
                      placeholder: "New password",
                      input_html: { autocomplete: "new-password", class: "devise-input" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      label: false,
                      placeholder: "Confirm your new password",
                      input_html: { autocomplete: "new-password", class: "devise-input" } %>
          <div class="pt-4">
            <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        label: false,
                        placeholder: "Current password",
                        input_html: { autocomplete: "current-password", class: "devise-input" } %>
          </div>
        </div>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Update", class: 'primary-button my-4' %>
        </div>
      <% end %>
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


