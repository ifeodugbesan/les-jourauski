<div class="devise-wrapper" style="background: #B9C9E2;">
  <div class="devise-container">
    <div class="devise-image di-left">
      <%= image_tag 'jamie-kasia.jpg' %>
    </div>
    <div class="devise-form">
      <h1 class="boldest text-center devise-form-title">Sign up</h1>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: 'Email',
                      input_html: { autocomplete: "email", class: 'devise-input' }%>
          <%= f.input :password,
                      required: true,
                      label: false,
                      placeholder: 'Password',
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: 'devise-input' } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      placeholder: 'Confirm password',
                      input_html: { autocomplete: "new-password", class: 'devise-input' } %>
        </div>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Sign up", class: 'primary-button my-4' %>
        </div>
      <% end %>
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


