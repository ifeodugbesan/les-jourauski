<h6 class="boldest mb-2">Requests</h6>
<% project.project_members.where(status: 'pending').each do |member| %>
  <a data-toggle="modal" data-target="#projectRequest_<%= member.id %>">
    <div class="project-request">
      <div class="">
        <%= cl_image_tag member.user.avatar.key, class: 'avatar' %>
        <span class="ml-2 text-14 bold"><%= member.user.full_name %></span>
      </div>
    </div>
  </a>
  <div class="modal fade" id="projectRequest_<%= member.id %>" tabindex="-1" role="dialog" aria-labelledby="projectRequestLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title boldest m-0" id="exampleModalLabel">Project membership requests</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body px-3 p-0">
          <div class="mb-3">
            <%= cl_image_tag member.user.avatar.key, class: 'avatar' %>
            <span class="ml-2 text-14 bold"><%= member.user.full_name %></span>
          </div>
          <h6 class="modal-title boldest m-0" id="exampleModalLabel">Reason:</h6>
          <%= member.reason %>
        </div>
        <div class="modal-footer">
          <%= link_to 'Reject', reject_membership_project_member_path(member), class: 'secondary-button no-decoration' %>
          <%= link_to 'Accept', accept_membership_project_member_path(member), class: 'primary-button no-decoration' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
