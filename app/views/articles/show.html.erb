<div class="article-container" data-controller="article">
  <div class="article-top">
    <div class="article-user">
      <%= cl_image_tag @article.user.avatar_key %>
      <div class="article-user-info">
        <h6 class="bold m-0 <%= @dark_mode ? 'grey' : 'black' %>"><%= @article.user.full_name %></h6>
        <p class="s-medium-text bold m-0 <%= @dark_mode ? 'white' : 'grey' %>"><%= @article.created_at.strftime('%b %d, %Y') %></p>
      </div>
      <% if policy(@article).edit? %>
        <div class="crud-links">
          <%= link_to edit_article_path(@article) do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <h3 class="bold mb-2 <%= @dark_mode ? 'grey' : 'black' %>"><%= @article.title %></h3>
    <h6 class="mb-4  <%= @dark_mode ? 'white' : 'grey' %>"><%= @article.preview_text %></h6>
  </div>
  <div class="article-show-content <%= @dark_mode ? 'white' : 'black' %>">
    <%= @article.content %>
  </div>
</div>
