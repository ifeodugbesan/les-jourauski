<% if @dark_mode %>
  <%= link_to toggle_dark_mode_path(dark_mode: false), data: { action: 'click->common#showLoader' } do %>
    <i class="fas fa-toggle-on grey"></i>
  <% end %>
<% else %>
  <%= link_to toggle_dark_mode_path(dark_mode: true), data: { action: 'click->common#showLoader' } do %>
    <i class="fas fa-toggle-off"></i>
  <% end %>
<% end %>
