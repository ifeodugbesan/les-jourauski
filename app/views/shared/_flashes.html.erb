<% if notice %>
  <div class="alert alert-info alert-dismissible fade show m-0 p-0" role="alert" data-controller="flashes" data-target="flashes.flash">
    <p class="text-center m-0 boldest small-text"><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-info alert-dismissible fade show m-0 p-0" role="alert" data-controller="flashes" data-target="flashes.flash">
    <p class="text-center m-0 boldest small-text"><%= alert %></p>
  </div>
